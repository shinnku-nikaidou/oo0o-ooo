---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button
  class="celebration-btn appearance-none py-2 px-4 bg-purple-500 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
  <slot />
</button>

<script>
  import confetti from "canvas-confetti";

  // Wait for DOM to be ready
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.querySelector(".celebration-btn");
    if (button) {
      button.addEventListener("click", () => {
        confetti({
          particleCount: 100,
          spread: 70,
          origin: { y: 0.6 },
        });
      });
    }
  });
</script>
